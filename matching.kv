#:kivy 1.0.9

<MatchingGame>:  

    Widget:
        id: game_screen
        size: root.size
        
        BoxLayout:
            id: game_area
            orientation: 'vertical'
            size: root.size
            
            canvas:
                Color:
                    rgb: (1,1,1)
                Rectangle:
                    source: "images/background.png"
                    size: self.size
                    pos: self.pos
        Label:
            font_size: 70  
            center_x: root.width / 2
            top: root.top - 25
            text: 'ANIMAL MATCHING'

        GridLayout:
            id: gridlayout
            size: (1000, 1000)
            center_x: root.width / 2
            top: root.top - 125
            cols:4
            rows:4
            spacing:10
            padding:10


            ToggleButton:
                id: tile1
                text: str(root.characters[0])
                background_down: str(root.grid[root.characters[0]-1].imageurl)
                on_press: root.passed_back(root.characters[0])                
            ToggleButton:
                id: tile2
                text: str(root.characters[1])
